<Theme xmlns="http://www.markux.com/schema"
       Name="Pixel">
  <!-- DEFAULT -->
  <Label Font="Assets/Sprites/UI/Fonts/Pixel.fontsettings"
         FontColor="White"
         FontSize="1" LineSpacing="2"
         Scale="0.5"
         TextAlignment="Center" AdjustToText="WidthAndHeight" />

  <Button BackgroundImage="Assets/Sprites/UI/Menu/Menu Frame.png:Normal"
          PressedImage="Assets/Sprites/UI/Menu/Menu Frame.png:Pressed"
          BackgroundImageType="Sliced"
          Font="Assets/Sprites/UI/Fonts/Pixel.fontsettings"
          FontSize="1" FontColor="White"
          TextAlignment="Bottom" />

  <PixelButton BackgroundImage="Assets/Sprites/UI/Menu/Menu Frame.png:Normal"
               PressedImage="Assets/Sprites/UI/Menu/Menu Frame.png:Pressed"
               BackgroundImageType="Sliced"
               Font="Assets/Sprites/UI/Fonts/Pixel.fontsettings"
               FontSize="1" FontColor="White"
               Width="4" Height="1.5" />
  
  <!-- GENERIC -->
  <Frame Style="BluePopup"
         BackgroundImage="Assets/Sprites/UI/Menu/Menu Frame.png:Normal"
         BackgroundImageType="Sliced"
         ContentMargin="5em,5em,5em,7em" ResizeToContent="False" />
</Theme>