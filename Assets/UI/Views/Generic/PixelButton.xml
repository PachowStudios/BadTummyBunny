<PixelButton MouseDown="ButtonMouseDown" MouseUp="ButtonMouseUp"
             MouseEnter="ButtonMouseEnter" MouseExit="ButtonMouseExit">
  <Region Offset="{TextOffset}">
    <Label Id="TextLabel"
           Text="{Text}"
           Offset="0,0,0,14em" />
    <ContentContainer />
  </Region>

  <ViewAnimation Id="HighlightImageAnimation">
    <Animate Field="BackgroundImage" To="{HighlightedImage}" />
  </ViewAnimation>
  
  <ViewAnimation Id="PressedImageAnimation">
    <Animate Field="BackgroundImage" To="{PressedImage}" />
    <Animate Field="TextLabel.Offset" To="0,0,0,12em" />
  </ViewAnimation>
  
  <ViewAnimation Id="HighlightColorAnimation">
    <Animate Field="BackgroundColor" To="{HighlightedColor}"
             Duration="0.05" ReverseSpeed="0.5" />
  </ViewAnimation>
  
  <ViewAnimation Id="PressedColorAnimation">
    <Animate Field="BackgroundColor" To="{PressedColor}" />
  </ViewAnimation>
</PixelButton>