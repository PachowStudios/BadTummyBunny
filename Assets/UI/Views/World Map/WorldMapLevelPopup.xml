<View xmlns="http://www.markux.com/schema"
      ViewName="WorldMapLevelPopup"
      Width="5" Height="2">
  <Button Click="OnClick"
          BackgroundImage="Assets/Sprites/UI/Menu/Menu Frame.png:Normal"
          PressedImage="Assets/Sprites/UI/Menu/Menu Frame.png:Pressed"
          BackgroundImageType="Sliced"
          Width="5" Height="2">

    <Label Text="{LevelName}"
           AdjustToText="Height"
           Width="8"
           Alignment="Top" />

    <List Items="{Stars}"
          CanSelect="False"
          Orientation="Horizontal"
          Spacing="4em"
          ItemWidth="11em" ItemHeight="10em"
          Alignment="Bottom" ContentAlignment="Center"
          OffsetFromParent="0,0,0,6em">
      <ListItem Id="Template"
                ShowItemLabel="False">
        <WorldMapLevelStar IsCollected="{Item.Value}" />
      </ListItem>
    </List>

    <ViewAnimation Id="ShowAnimation">
      <Animate Field="Alpha"
               From="0" To="1"
               Duration="0.2s"
               EasingFunction="QuadraticEaseIn" />
    </ViewAnimation>

    <ViewAnimation Id="HideAnimation">
      <Animate Field="Alpha"
               From="1" To="0"
               Duration="0.2s"
               EasingFunction="QuadraticEaseIn" />
    </ViewAnimation>
  </Button>
</View>