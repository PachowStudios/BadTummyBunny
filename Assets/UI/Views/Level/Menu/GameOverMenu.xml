<View xmlns="http://www.markux.com/schema"
      ViewName="GameOverMenu">
  <Group Spacing="1">
    <PixelButton Text="Retry"
                 Click="OnRetryClick" />

    <PixelButton Text="Quit"
                 Click="OnQuitClick" />
  </Group>
  
  <ViewAnimation Id="ShowAnimation">
    <Animate Field="Alpha"
             From="0" To="1"
             Duration="0.2s" EasingFunction="QuadraticEaseIn" />
  </ViewAnimation>

  <ViewAnimation Id="HideAnimation">
    <Animate Field="Alpha"
             From="1" To="0"
             Duration="0.2s" EasingFunction="QuadraticEaseIn" />
  </ViewAnimation>
</View>